<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:text="CardÃ¡pio Online"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkboxPrato1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="16dp"
        android:text="Prato 1" />

    <CheckBox
        android:id="@+id/checkboxPrato2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkboxPrato1"
        android:layout_marginTop="16dp"
        android:text="Prato 2" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkboxPrato2"
        android:layout_marginTop="16dp"
        android:text="Total: R$ 0,00" />

    <Button
        android:id="@+id/btnFinalizarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTotal"
        android:layout_marginTop="16dp"
        android:text="Realizar Pedido" />

</RelativeLayout>
